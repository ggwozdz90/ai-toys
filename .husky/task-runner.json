{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet format",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [
        "format",
        "--verify-no-changes",
        "--verbosity",
        "detailed",
        "--severity",
        "info"
      ]
    },
    {
      "name": "csharpier",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": ["csharpier", ".", "--check", "--loglevel", "debug"]
    },
    {
      "name": "xstyler",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": ["xstyler", "--directory", ".", "--recursive"]
    },
    {
      "name": "prettier",
      "group": "pre-commit-operations",
      "command": "npx",
      "args": ["prettier", "**/*.{json,yaml}", "--check", "--log-level", "log"]
    },
    {
      "name": "markdownlint",
      "group": "pre-commit-operations",
      "command": "npx",
      "args": [
        "markdownlint",
        ".",
        "--dot",
        "--ignore",
        "node_modules",
        "--ignore",
        "paket-files",
        "--ignore",
        "packages",
        "--ignore",
        "CHANGELOG.md",
        "--disable",
        "MD013"
      ]
    },
    {
      "name": "cspell",
      "group": "pre-commit-operations",
      "command": "npx",
      "args": [
        "cspell",
        "**/*.{md,txt,json,yaml,cs}",
        "--config",
        ".config/cspell.json"
      ]
    },
    {
      "name": "dotnet build",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["build", "/p:AppxPackageSigningEnabled=false"]
    },
    {
      "name": "dotnet test",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["test"]
    },
    {
      "name": "commitlint",
      "group": "commit-msg-operations",
      "command": "npx",
      "args": [
        "commitlint",
        "--edit",
        "${args}",
        "--verbose",
        "--config",
        ".config/.commitlintrc.json"
      ]
    }
  ]
}
