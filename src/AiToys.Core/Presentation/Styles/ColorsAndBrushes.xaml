<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PageBackgroundColor">#282828</Color>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}" />

    <Color x:Key="TileBackgroundColor">#313131</Color>
    <SolidColorBrush x:Key="TileBackgroundBrush" Color="{StaticResource TileBackgroundColor}" />

    <SolidColorBrush x:Key="PendingBrush" Color="#797775" />
    <SolidColorBrush x:Key="ProcessingBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="CompletedBrush" Color="#107C10" />
    <SolidColorBrush x:Key="FailedBrush" Color="#C42B1C" />

</ResourceDictionary>
