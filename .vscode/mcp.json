{
  "servers": {
    "Context7": {
      "command": "docker",
      "args": ["run", "-i", "--name", "mcp-context7", "--rm", "mcp/context7"]
    },
    "SequentialThinking": {
      "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-sequential-thinking",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    },
    "DuckDuckGoSearch": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-duckduckgo",
        "--rm",
        "mcp/duckduckgo"
      ]
    },
    "KnowledgeGraph": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-knowledge-graph",
        "--rm",
        "--mount",
        "type=bind,src=${workspaceFolder}/.vscode,dst=/app/memory",
        "-e",
        "MEMORY_FILE_PATH=/app/memory/memory.json",
        "mcp/memory"
      ]
    },
    "FileSystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-filesystem",
        "--rm",
        "--mount",
        "type=bind,src=${workspaceFolder},dst=/projects/workspace",
        "mcp/filesystem",
        "/projects"
      ]
    }
  }
}
